

<div class= "container mt-3" >
  <div class="row">
    <div class="col-md-10 col-12 mx-auto d-flex justify-content-between">

{{!-- search --}}
        <form action="/restaurants/search">
  <div class="input-group">
    <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
      value="{{keyword}}" aria-describedby="search-button" />
    <div class="input-group-append">
      <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
    </div>
  </div>
        </form>

{{!-- sort --}}
        <form  action=" /" method="GET" id="sort-form">
          <div class="input-group ml-2">
            <select class="custom-select custom-select-sm" name="sort" id="sort-combo" onchange="sort-form.submit()">
              <option value="a-z" {{#if sortValue.a-z}} Selected {{/if}} > A->Z</option>
              <option value="z-a" {{#if sortValue.z-a}} Selected {{/if}}> Z->A</option>
              <option value="category" {{#if sortValue.category}}Selected {{/if}}> 類別</option>
              <option value="location" {{#if sortValue.location}} Selected{{/if}}> 地址</option>
              <option value="rating" {{#if sortValue.rating}} Selected {{/if}}> 評分</option>
           </select>
          <div class="input-group-append">
            <label class="input-group-text custom-select-sm" for="sort-combo">排序</label>
          </div>
          </div>
      </form>
    </div>
  </div>
</div>
   
     

  

  {{!-- restaurant list  --}}
  <div class="my-5 container">
    <div class="row">
      <div class="col-md-10 col-12 mx-auto">
        <div class = "d-flex flex-wrap justify-content-center">
        {{#if restaurants}}
          {{#each restaurants}}
            <div class="card mr-3 mb-3 text-secondary" style= "width:25%">
              <img class="card-img-top" src="{{this.image}}"
                alt="{{this.name}}">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>
  
                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{this.category}}
                </div>
                <span class="badge badge-pill badge-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
              </div>

              <div style:"text-align:right">
                <a  class= "btn"href="/restaurants/{{this._id}}/edits">edit</a>
                <a  class="btn" href="/restaurants/{{this._id}}">detail</a>
                <form action="/restaurants/{{ this._id }}?_method=DELETE" method="POST" class="d-inline">
                  <button type="submit">delete</button>
                </form>
              </div>
               
            </div>
          {{/each}}
        {{else}}
          <h1>No results found </h1>
        {{/if}}
        </div>
      </div>
    </div>
  </div>



