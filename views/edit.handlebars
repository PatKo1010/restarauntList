
<div style = "margin: 20px auto; width:60%">


<form action="/restaurants/{{restaurant._id}}/edits" method= "POST">
  
  <div class="form-group">
    <label for="editName">餐廳名稱</label>
    <input type="text" class="form-control" id="editName" name= "name" value= {{restaurant.name}} aria-describedby="emailHelp" required>
  </div>


  <div class="form-group">
    <label for="editAddress">餐廳地址</label>
    <input type="text" class="form-control" id="editAddress" name="address" value={{restaurant.location}} required>
  </div>

  <div class="form-group">
    <label for="image">圖片網址</label>
    <input type="url" class="form-control" id="image" name="image" placeholder="輸入圖片網址 https://.*" pattern="https://.*"
      value = {{restaurant.image}} >
  </div>

  <div class="form-group">
    <label for="category">餐廳分類</label>
    <select class="custom-select" id="category" name="category" value = "{{restaurant.category}}" required>
      <option>Choose...</option>
      <option value="中東料理">中東料理</option>
      <option value="日本料理">日本料理</option>
      <option value="義式餐廳">義式餐廳</option>
      <option value="美式">美式</option>
      <option value="酒吧">酒吧</option>
      <option value="咖啡">咖啡</option>
    </select>
  </div>


  <div class="form-group">
    <label for="phone">餐廳電話</label>
    <input type="tel" class="form-control" id="phone" name="phone" value="{{restaurant.phone}}" placeholder="02 2521 2813" required>
  </div>

   <div class="form-group">
     <label for="googleMap">Google Map 網址</label>
     <input type="url" class="form-control" id="googleMap" name="googleMap" placeholder="https://example.com"
     pattern="https://.*" size="30" value= {{restaurant.google_map}} >
   </div>

    <div class="form-group">
      <label for="rate">餐廳評分</label>
      <input type="number" id="rate" name="rating" class="form-control" placeholder="3.0" step="0.1" min="0" max="5"
      value = {{restaurant.rating}} required>
    </div>

    <div class="form-group">
      <label for="description">餐廳描述</label>
      <textarea class="form-control" id="description" name="description" placeholder="輸入介紹" row='4'required >{{restaurant.description}}</textarea>
    </div>

   <button type="submit" class="btn btn-primary">Submit</button>

</div>


  
</form>

</div>








